<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.jsproducerinsurance.dao.InsuranceCompanyDao">

    <resultMap type="com.example.jsproducerinsurance.entity.InsuranceCompany" id="InsuranceCompanyMap">
        <result property="companyId" column="company_id" jdbcType="INTEGER"/>
        <result property="companyName" column="company_name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="InsuranceCompanyMap">
        select
          company_id, company_name
        from js-deposit.insurance_company
        where company_id = #{companyId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="InsuranceCompanyMap">
        select
          company_id, company_name
        from js-deposit.insurance_company
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="InsuranceCompanyMap">
        select
          company_id, company_name
        from js-deposit.insurance_company
        <where>
            <if test="companyId != null">
                and company_id = #{companyId}
            </if>
            <if test="companyName != null and companyName != ''">
                and company_name = #{companyName}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="companyId" useGeneratedKeys="true">
        insert into js-deposit.insurance_company(company_name)
        values (#{companyName})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update js-deposit.insurance_company
        <set>
            <if test="companyName != null and companyName != ''">
                company_name = #{companyName},
            </if>
        </set>
        where company_id = #{companyId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from js-deposit.insurance_company where company_id = #{companyId}
    </delete>

</mapper>